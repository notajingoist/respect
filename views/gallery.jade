                    - if (n === 1)
                        div(class='gallery-image')
                            img(src='/images/thumbs/gallery-opening/#{n}.jpg', class='gallery-album', data-src='gallery-opening/', data-no='#{n}', data-ext='.jpg')
                    - else if (n === 89)
