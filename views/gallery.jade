                            a(href='#specimen-set-d', class='browse-item').
                                Specimen Set D
                        li
                            a(href='#specimen-set-e', class='browse-item').
                                Specimen Set E
                        li
                            a(href='#gallery-opening', class='browse-item').
                                Gallery Opening
        section(class='panel gallery')
            - var n = 1
            div(class='panel-section', id='specimen-set-a')
                div(class='title') Specimen Set A
                br
