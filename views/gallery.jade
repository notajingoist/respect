extend layout
block content
    div(class='back-to-top hide')
        ⇧ back to top
    div(class='main-content')
        div(class='gallery-preview hide closed')
            div(class='description')
            div(class='icon icon-x').
                ✕
            div(class='icon icon-l').
                ❮
            div(class='icon icon-r').
                ❯
        section(class='panel')
            div(class='panel-section', id='spring-cleaning')
                div(class='title') Browse Gallery
                div(class='content')
                    ol(class='browse')
                        li
                            a(href='#specimen-set-a', class='browse-item').
                                Specimen Set A
                        li
                            a(href='#specimen-set-b', class='browse-item').
                                Specimen Set B
                        li
                            a(href='#specimen-set-c', class='browse-item').
